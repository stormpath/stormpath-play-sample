# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                           controllers.Projects.index


GET     /message                    controllers.MessageController.getMessage()
GET     /assets/javascripts/routes  controllers.MessageController.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Authentication
GET     /login                      controllers.MainController.login()
POST    /login                     controllers.MainController.authenticate()